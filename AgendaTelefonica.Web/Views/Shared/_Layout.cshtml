<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Agenda Telefônica</title>
    <link href="~/Content/Bootstrap/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/fontawesome/css/all.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/fontawesome/css/fontawesome.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/fontawesome/css/brands.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/Modernizr/modernizr-2.6.2.js"></script>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />

</head>
<body>

    <nav class="navbar navbar-light bg-light" style="margin-bottom:5%;">
        <a class="navbar-brand" href="@Url.Action("Index", "Home")">
            <i class="fas fa-address-book" style="font-size:20px; color:#444343;"></i>
            Agenda Telefônica
        </a>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p class="text-center">&copy; @DateTime.Now.Year - Gabriela Soares de Oliveira</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/popper/popper.min.js"></script>
    <script src="~/Scripts/Bootstrap/bootstrap.min.js"></script>
    <script src="~/Content/fontawesome/js/all.min.js"></script>
    <script src="~/Scripts/app.js" type="text/javascript"></script>
    <link rel="stylesheet" href="http://code.jquery.com/ui/1.9.0/themes/base/jquery-ui.css" />
    <script src="http://code.jquery.com/jquery-1.8.2.js"></script>
    <script src="http://code.jquery.com/ui/1.9.0/jquery-ui.js"></script>
    <script src="~/Scripts/Calendario.js"></script>
</body>
</html>